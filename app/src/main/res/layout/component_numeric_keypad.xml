<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:visibility="visible">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mediumShadeColor"
        android:weightSum="4">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_1"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:text="@string/component_keypad_key_1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_2"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginRight="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_3"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:text="@string/component_keypad_key_3"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_4"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginEnd="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_5"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginRight="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_5"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_6"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginStart="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_6"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_7"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginEnd="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_7"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_8"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginRight="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_8"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_9"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginStart="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginBottom="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_9"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/keypad_button_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginEnd="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:src="@drawable/icon_pinpad_delete"
                style="@style/Widget.Button.Payplaza.Keypad.Delete"
                android:contentDescription="@string/component_keypad_key_backspace"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/keypad_button_0"
                style="@style/Widget.Button.Payplaza.Keypad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginRight="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:text="@string/component_keypad_key_0" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/keypad_button_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_border_thickness_pinpad_grid"
                android:layout_marginStart="@dimen/half_border_thickness_pinpad_grid"
                android:layout_weight="1"
                android:src="@drawable/icon_numpad_confirm"
                style="@style/Widget.Button.Payplaza.Keypad.Confirm"
                android:contentDescription="@string/component_keypad_key_confirm" />
        </TableRow>
    </TableLayout>
</androidx.appcompat.widget.LinearLayoutCompat>