<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/primaryFontColor</item>

        <item name="android:statusBarColor">@color/black_100</item>

        <!-- This is for the divider line in the drawer layout navigationView.-->
        <item name="colorOutline">@color/mediumShadeColor</item>

        <!-- Secondary brand color. -->
        <!-- colorSecondary is also the color of the date picker. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/yellow</item>

        <!-- color of active menu item in navigation drawer -->
        <item name="colorSecondaryContainer">@color/lightShadeColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primaryFontColor</item>
        <item name="android:colorBackground">@color/windowBackgroundColor</item>

        <item name="successColor">@color/green</item>
        <item name="warningColor">@color/yellow</item>
        <item name="errorColor">@color/red</item>

        <item name="primaryAccentColor">@color/primaryColor</item>
        <item name="regularFont">@font/notosans_regular</item>
        <item name="mediumFont">@font/notosans_medium</item>
        <item name="lightFont">@font/notosans_light</item>
        <item name="bookmarkBarVisibility">visible</item>
        <item name="bookmarkBarGlyphs">@array/sourcesanspro_glyphs</item>
        <item name="contentViewTopOffset">@dimen/content_offset_bookmarkbar</item>

        <!-- Branded items -->
        <item name="background">@color/windowBackgroundColor</item>
        <item name="itemBackground">@drawable/background_keypad_button</item>
        <item name="number">@color/blue_120</item>
        <item name="numberBookmarks">@color/black_140</item>
        <item name="textFillColor">@color/blue_110</item>
        <item name="divider">@color/black_10</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialAlertDialog</item>
    </style>

    <style name="TranslucentActivity" parent="AppTheme">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>