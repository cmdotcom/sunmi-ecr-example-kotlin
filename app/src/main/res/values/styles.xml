<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:textColor">@color/primaryFontColor</item>
    </style>

    <!-- Required transaction indicator messages -->
    <style name="TextAppearance.ExtraInformation">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">?regularFont</item>
    </style>

    <!-- Page header -->
    <style name="TextAppearance.Header">
        <item name="android:fontFamily">?mediumFont</item>
        <item name="android:textSize">@dimen/text_size_largest</item>
    </style>

    <style name="TextAppearance.ReceiptHeader">
        <item name="android:fontFamily">?mediumFont</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <!-- Transaction state messages, important information -->
    <style name="TextAppearance.ImportantInformation">
        <item name="android:fontFamily">?mediumFont</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Button text -->
    <style name="TextAppearance.Button">
        <item name="fontFamily">?regularFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.AppTheme.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Amount entry, keypad digits -->
    <style name="TextAppearance.Number">
        <item name="fontFamily">?regularFont</item>
        <item name="android:textSize">@dimen/text_size_extra_extra_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?numberBookmarks</item>
    </style>

    <style name="TextAppearance.PadNumber">
        <item name="fontFamily">?regularFont</item>
        <item name="android:textSize">@dimen/text_size_extra_larger</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?number</item>
    </style>

    <style name="TextAppearance.Currency">
        <item name="fontFamily">?regularFont</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black_71</item>
    </style>

    <style name="Widget.Button.Payplaza" parent="android:Widget.Material.Light.Button.Borderless">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
    </style>

    <style name="Widget.Button.Payplaza.Keypad" parent="android:Widget.Material.Light.Button.Borderless">
        <item name="android:elevation">0dp</item>
        <item name="android:background">?itemBackground</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.PadNumber</item>
        <item name="android:textColor">?number</item>
    </style>

    <!--  Buttons  -->
    <style name="ActionTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="iconTint">?textFillColor</item>
        <item name="iconSize">24dp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?textFillColor</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textSize">15.75sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="TransactionTypeText" parent="Widget.Material3.Button.TextButton">
        <item name="iconTint">?numberBookmarks</item>
        <item name="iconSize">24dp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?numberBookmarks</item>
        <item name="android:textSize">15.75sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="ActionButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">?textFillColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textColor">?background</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="iconTint">?background</item>
        <item name="iconSize">32dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?divider</item>
    </style>

    <!-- Material AlertDialog styles -->

    <style name="AppTheme.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Layout</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.BodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.NegativeButton</item>
        <item name="android:backgroundDimAmount">.80</item>
    </style>

    <style name="MaterialAlertDialog.TitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_warning_red_exclamation</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">100</item>
    </style>

    <style name="MaterialAlertDialog.BodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textAppearance">?textAppearanceBodyLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_warning_red_exclamation</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black_71</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">100</item>
    </style>

    <style name="MaterialAlertDialog.PositiveButton" parent="ActionButton">
        <item name="android:textColor">@color/white</item>
        <item name="icon">@drawable/ic_check_small</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="iconSize">28dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="MaterialAlertDialog.NegativeButton" parent="ActionTextButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MaterialAlertDialog.Layout" parent="MaterialAlertDialog.Material3">
        <item name="cornerSize">28dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

</resources>